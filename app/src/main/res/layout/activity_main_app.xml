<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.benutzer.itmuerpapp.mainAppActivity"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attendanceImageView"
        android:background="@drawable/attendance"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:contentDescription="@string/labelAttendanceIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:onClick="attendanceActivityCall"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileImageView"
        android:background="@drawable/profile"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_alignTop="@+id/attendanceImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="profileActivityCall"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationImageView"
        android:background="@drawable/registration"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/attendanceSmallTextView"
        android:layout_alignStart="@+id/attendanceSmallTextView"
        android:onClick="registerActivityCall"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeTableImageView"
        android:layout_alignTop="@+id/registrationImageView"
        android:layout_alignLeft="@+id/profileImageView"
        android:layout_alignStart="@+id/profileImageView"
        android:background="@drawable/timetable"
        android:onClick="timeTableActivityCall"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultImageView"
        android:background="@drawable/result"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/registerSmallTextView"
        android:layout_alignStart="@+id/registerSmallTextView"
        android:layout_marginBottom="28dp"
        android:onClick="resultActivityCall"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsImageView"
        android:layout_alignTop="@+id/resultImageView"
        android:layout_alignLeft="@+id/timeTableImageView"
        android:layout_alignStart="@+id/timeTableImageView"
        android:background="@drawable/news"
        android:onClick="newsActivityCall"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Attendance"
        android:id="@+id/attendanceSmallTextView"
        android:layout_below="@+id/attendanceImageView"
        android:layout_alignLeft="@+id/attendanceImageView"
        android:layout_alignStart="@+id/attendanceImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Profile"
        android:id="@+id/profileSmallTextView"
        android:layout_below="@+id/profileImageView"
        android:layout_alignLeft="@+id/profileImageView"
        android:layout_alignStart="@+id/profileImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Register"
        android:id="@+id/registerSmallTextView"
        android:layout_below="@+id/registrationImageView"
        android:layout_alignLeft="@+id/registrationImageView"
        android:layout_alignStart="@+id/registrationImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time Table"
        android:id="@+id/timetableSmallTextView"
        android:layout_below="@+id/timeTableImageView"
        android:layout_alignLeft="@+id/timeTableImageView"
        android:layout_alignStart="@+id/timeTableImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Result"
        android:id="@+id/resultSmallTextView"
        android:layout_below="@+id/newsImageView"
        android:layout_alignRight="@+id/registerSmallTextView"
        android:layout_alignEnd="@+id/registerSmallTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="News"
        android:id="@+id/newsSmallTextView"
        android:layout_below="@+id/newsImageView"
        android:layout_alignRight="@+id/profileSmallTextView"
        android:layout_alignEnd="@+id/profileSmallTextView" />

</RelativeLayout>
